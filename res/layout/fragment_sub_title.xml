<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_sub_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_sub_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/monitor_title" 
            android:padding="5dp"/>
  		<TextView
            android:id="@+id/txt_sub_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_sub_title_icon"
            android:padding="5dp"
            android:text="我的设备" />
  		<ImageButton
            android:id="@+id/btn_sub_title_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:padding="5dp"
            android:src="@android:drawable/ic_popup_sync" />

        <ImageButton
            android:id="@+id/btn_sub_title_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="43dp"
            android:background="#00000000"
            android:padding="5dp"
            android:src="@android:drawable/ic_input_add" />

    </RelativeLayout>